@model Teatru.Web.ViewModels.ScenetaViewModel

@{
    ViewData["Title"] = "CreateSceneta";
}

<h1>Creeaza Sceneta</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateSceneta">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>    
            <div class="form-group">
                <label asp-for="Nume" class="control-label"></label>
                <input asp-for="Nume" class="form-control" />
                <span asp-validation-for="Nume" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gen" class="control-label"></label>
                <input asp-for="Gen" class="form-control" />
                <span asp-validation-for="Gen" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Durata" class="control-label"></label>
                <input asp-for="Durata" class="form-control" />
                <span asp-validation-for="Durata" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-dark m-2" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
